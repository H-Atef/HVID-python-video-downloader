<CButton@MDFillRoundFlatButton>:

    font_size: 25
    size_hint_min_y: 20
    size_hint_max_y: 40
    md_bg_color: 0, 0, 0, 0
    bold:True
    text_color:utils.get_color_from_hex("#FFFFFF")  if self.state == 'normal' else utils.get_color_from_hex("#000000") 
    size_hint_x: 0.9
    pos_hint: {"center_x": .5}

    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#d4af37") 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]



<HomeLayout@BoxLayout>:
    orientation: "vertical"
             
    BoxLayout:
        id: bx
        orientation: "vertical"
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#d4af37") 
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0, 0, 30, 30]
    FloatLayout:
        id: circles
        orientation: "horizontal"
        
